<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/canbaoLinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10.0dip"
    android:background="@drawable/content_corners_bg"
    android:orientation="vertical"
    android:padding="10.0dip"
    android:visibility="visible">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/u43"
        android:drawablePadding="5.0dip"
        android:gravity="center|left"
        android:text="社保采集信息"
        android:textColor="@android:color/black"
        android:textSize="@dimen/login_text_size"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="10.0dip">

        <TextView
            android:layout_width="100.0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="5.0dip"
            android:gravity="center|right"
            android:text="监护人信息"
            android:textColor="@android:color/black"
            android:textSize="@dimen/common_text_size" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5.0dip"
                    android:gravity="center|right"
                    android:text="姓名："
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/common_text_size" />

                <EditText
                    android:id="@+id/JHRNameEditText"
                    android:layout_width="fill_parent"
                    android:layout_height="48.0dip"
                    android:background="@drawable/input_bg"
                    android:padding="5.0dip"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/common_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5.0dip"
                    android:gravity="center|right"
                    android:text="身份证号："
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/common_text_size" />

                <EditText
                    android:id="@+id/JHRIDCardEditText"
                    android:layout_width="fill_parent"
                    android:layout_height="48.0dip"
                    android:background="@drawable/input_bg"
                    android:padding="5.0dip"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/common_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5.0dip"
                    android:gravity="center|right"
                    android:text="手机："
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/common_text_size" />

                <EditText
                    android:id="@+id/JHRMobileEditText"
                    android:layout_width="fill_parent"
                    android:layout_height="48.0dip"
                    android:background="@drawable/input_bg"
                    android:padding="5.0dip"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/common_text_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="10.0dip">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
            android:layout_weight="1.0"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100.0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="5.0dip"
                android:gravity="center|right"
                android:text="采集状态："
                android:textColor="@android:color/black"
                android:textSize="@dimen/common_text_size" />

            <Spinner
                android:id="@+id/CJSpinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:entries="@array/cbstatus_array"
                android:spinnerMode="dropdown"
                android:textColor="@android:color/black"
                android:textSize="@dimen/common_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
            android:layout_weight="1.0"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100.0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="5.0dip"
                android:gravity="center|right"
                android:text="参保状态："
                android:textColor="@android:color/black"
                android:textSize="@dimen/common_text_size" />

            <Spinner
                android:id="@+id/CBSpinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:entries="@array/cbstate_array"
                android:spinnerMode="dropdown"
                android:textColor="@android:color/black"
                android:textSize="@dimen/common_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100.0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="5.0dip"
                android:gravity="center|right"
                android:text="手机："
                android:textColor="@android:color/black"
                android:textSize="@dimen/common_text_size" />

            <EditText
                android:id="@+id/MobileEditText"
                android:layout_width="fill_parent"
                android:layout_height="48.0dip"
                android:background="@drawable/input_bg"
                android:padding="5.0dip"
                android:inputType="number"
                android:textColor="@android:color/black"
                android:textSize="@dimen/common_text_size" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="center|right"
            android:text="备注："
            android:textColor="@android:color/black"
            android:textSize="@dimen/common_text_size" />

        <EditText
            android:id="@+id/DescribeEditText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_bg"
            android:minHeight="48dp"
            android:padding="5dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/common_text_size" />
    </LinearLayout>
</LinearLayout>