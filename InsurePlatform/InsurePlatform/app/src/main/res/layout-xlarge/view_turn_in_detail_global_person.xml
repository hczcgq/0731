<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="center|right"
                    android:text="姓名："
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/common_text_size" />

                <TextView
                    android:id="@+id/TurnNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="chenguoquan"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/common_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="center|right"
                    android:text="性别："
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/common_text_size" />

                <TextView
                    android:id="@+id/TurnSexTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/common_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="center|right"
                    android:text="出生日期："
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/common_text_size" />

                <TextView
                    android:id="@+id/TurnBirthTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1990-10－12"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/common_text_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="center|right"
                    android:text="年龄："
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/common_text_size" />

                <TextView
                    android:id="@+id/TurnAgeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/common_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="center|right"
                    android:text="户号："
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/common_text_size" />

                <TextView
                    android:id="@+id/TurnRoonNoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1234568"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/common_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="center|right"
                    android:text="联系方式："
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/common_text_size" />

                <TextView
                    android:id="@+id/TurnContractTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15926395578"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/common_text_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="center|right"
                    android:text="区："
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/common_text_size" />

                <TextView
                    android:id="@+id/TurnRegionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姑苏区"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/common_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="center|right"
                    android:text="街道："
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/common_text_size" />

                <TextView
                    android:id="@+id/TurnAreaTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xx街道"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/common_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="center|right"
                    android:text="社区："
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/common_text_size" />

                <TextView
                    android:id="@+id/TurnPropTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xx社区"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/common_text_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="center|right"
                android:text="户籍地址："
                android:textColor="@android:color/black"
                android:textSize="@dimen/common_text_size" />

            <TextView
                android:id="@+id/TurnLocationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xx省xx市xx县"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/common_text_size" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
