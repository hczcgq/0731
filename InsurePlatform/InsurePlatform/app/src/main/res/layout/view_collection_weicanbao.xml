<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10.0dip"
    android:background="@drawable/content_corners_bg"
    android:orientation="vertical"
    android:padding="10.0dip"
    android:visibility="visible">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/u43"
        android:drawablePadding="5.0dip"
        android:gravity="center|left"
        android:text="未参保信息"
        android:textColor="@android:color/black"
        android:textSize="@dimen/login_text_size"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="10.0dip">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:padding="10.0dip"
            android:text="当前常住地："
            android:textColor="@android:color/black"
            android:textSize="@dimen/common_text_size" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
            android:gravity="center|left"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/WCBprovSpinner"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="5.0dip"
                android:layout_weight="1.0"
                android:gravity="center|left"
                android:spinnerMode="dropdown" />

            <Spinner
                android:id="@+id/WCBcitySpinner"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center|left"
                android:spinnerMode="dropdown" />

            <Spinner
                android:id="@+id/WCBtownSpinner"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center|left"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:padding="10.0dip"
            android:text="地址："
            android:textColor="@android:color/black"
            android:textSize="@dimen/common_text_size" />

        <EditText
            android:id="@+id/WCBaddressEditText"
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:background="@drawable/input_bg"
            android:gravity="center|left"
            android:padding="5.0dip"
            android:textColor="@android:color/black"
            android:textSize="@dimen/common_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="10.0dip">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:padding="10.0dip"
            android:text="当前状态："
            android:textColor="@android:color/black"
            android:textSize="@dimen/common_text_size" />

        <Spinner
            android:id="@+id/WCBStatusSpinner"
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
            android:entries="@array/status_array"
            android:gravity="center|left"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:padding="10.0dip"
            android:text="当前未参保原因："
            android:textColor="@android:color/black"
            android:textSize="@dimen/common_text_size" />

        <Spinner
            android:id="@+id/WCBReasonSpinner"
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
            android:entries="@array/reason_array"
            android:gravity="center|left"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="10.0dip">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:padding="10.0dip"
            android:text="单位（学校）名称："
            android:textColor="@android:color/black"
            android:textSize="@dimen/common_text_size" />

        <EditText
            android:id="@+id/WCBorgNameEditText"
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:background="@drawable/input_bg"
            android:gravity="center|left"
            android:padding="5.0dip"
            android:textColor="@android:color/black"
            android:textSize="@dimen/common_text_size" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:padding="10.0dip"
            android:text="单位（学校）所在地："
            android:textColor="@android:color/black"
            android:textSize="@dimen/common_text_size" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
            android:gravity="center|left"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/WCBorgProvSpinner"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="5.0dip"
                android:layout_weight="1.0"
                android:gravity="center|left"
                android:spinnerMode="dropdown" />

            <Spinner
                android:id="@+id/WCBorgCitySpinner"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center|left"
                android:spinnerMode="dropdown" />

            <Spinner
                android:id="@+id/WCBorgTownSpinner"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center|left"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:padding="10.0dip"
            android:text="单位（学校）地址："
            android:textColor="@android:color/black"
            android:textSize="@dimen/common_text_size" />

        <EditText
            android:id="@+id/WCBorgAddrEditText"
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:background="@drawable/input_bg"
            android:gravity="center|left"
            android:padding="5.0dip"
            android:textColor="@android:color/black"
            android:textSize="@dimen/common_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="10.0dip">

        <CheckBox
            android:id="@+id/WCBCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:padding="10.0dip"
            android:text="经宣传后确认参保"
            android:textColor="@android:color/black"
            android:textSize="@dimen/common_text_size" />
    </LinearLayout>
</LinearLayout>